    <TextView
        android:id="@+id/closing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/opening"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="23dp"
        android:text="Closing_Time:"
        android:textColor="@color/colorGrey1"
        android:textSize="15dp"

        android:textStyle="italic" />

    <TextView
        android:id="@+id/opening"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_number"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="22dp"
        android:text="Opening_Time:"
        android:textColor="@color/colorGrey1"
        android:textSize="15dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/vaction"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="22dp"
        android:text="275"
        android:textColor="@color/colorGrey1"
        android:textSize="15dp"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/phonedef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vaction"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:text="Phone Number :"
        android:drawableLeft="@drawable/ic_phone_black_24dp"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="14dp">



    </TextView>

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="187dp"
        android:layout_marginTop="322dp"
        android:text="Bethlehem"
        android:textColor="@color/colorGrey1"
        android:textSize="15dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="322dp"
        android:text="West Bank"
        android:textColor="@color/colorGrey1"
        android:textSize="15dp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="25dp"
        android:layout_height="38dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="320dp"
        android:text=","
        android:textColor="@color/colorGrey1"
        android:textSize="15dp"
         />



    <TextView
        android:id="@+id/citydef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="15dp"
        android:text="Address :"
        android:drawableLeft="@drawable/ic_location_on"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="14dp">


    </TextView>
    <TextView
        android:id="@+id/vacationdef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/citydef"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text="Vacation:"
        android:drawableLeft="@drawable/ic_vacation"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="14dp">



    </TextView>

    <TextView
        android:id="@+id/vaction"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/city"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="20dp"
        android:text="Vac"
        android:textColor="@color/colorGrey1"
        android:textSize="15dp"
        android:textStyle="italic" />
<TextView
    android:id="@+id/lockdef"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/phone_number"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="15dp"
    android:text="Opens at:"
    android:drawableLeft="@drawable/ic_lock_open_black_24dp"
    android:drawablePadding="5dp"
    android:gravity="center"
    android:textColor="@color/colorPrimary"
    android:textStyle="bold"
    android:textSize="14dp">



</TextView>
    <TextView
        android:id="@+id/opendef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lockdef"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:text="Closes at:"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="14dp">



    </TextView>

    <TextView
        android:id="@+id/insurancedef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/closing"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:text="Insurance Companies:"
        android:drawableLeft="@drawable/ic_offline_pin_black_24dp"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="14dp">

    </TextView>

    <TextView
        android:id="@+id/insurance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/closing"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="188dp"
        android:text="Insurance Companies:"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:textColor="@color/colorGrey1"
        android:textSize="14dp">

    </TextView>

    <Button
        android:id="@+id/phonebtn"

        android:layout_width="170dp"
        android:gravity="center"
        android:layout_height="57dp"
        android:layout_below="@id/phone_number"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="140dp"
        android:text="Call now"
        android:background="@drawable/gradient"

        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="#FFFFFF">
    </Button>

    <Button
        android:id="@+id/buttonmap"
        android:layout_width="170dp"
        android:layout_height="57dp"
        android:layout_below="@id/phone_number"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/gradient"
        android:text="View On Map"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:textStyle="bold">

    </Button>

</RelativeLayout>
